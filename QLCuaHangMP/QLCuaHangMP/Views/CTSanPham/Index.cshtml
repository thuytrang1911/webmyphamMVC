
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id='main' style="min-height: 900px; min-width: 600px;" ng-controller="CTSanPhamController">
    <label style="padding-left:20px;line-height: 40px;font-size: 25px;color: #6E573D"><b>CHI TIẾT SẢN PHẨM</b></label>
    <div style="width:30%;height:2.5px; background-color: #6E573D; margin-left:20px;"></div>
    <div class="col-6 col-m-6 col-s-12" id='product'>
        <div class='product2'>
            <img src='~/images/{{s.Anh}}' style='width: 400px; height: 400px;text-align: center; margin-left: 100px' id="img-main" />
            <br /><br />

        </div>
        <ul>
            <li><img src='~/images/{{s.Anh}}' onclick="changeImage('one')" id="one" /></li>
            <li><img src='~/images/{{s.Anh}}' onclick="changeImage('two')" id="two" /></li>
            <li><img src='~/images/{{s.Anh}}' onclick="changeImage('three')" id="three" /></li>
            <li><img src='~/images/{{s.Anh}}' onclick="changeImage('four')" id="four" /></li>
            <li><img src='~/images/{{s.Anh}}' onclick="changeImage('five')" id="five" /></li>
        </ul>
    </div>
    <div class="col-6 col-m-6 col-s-12" @*ng-repeat="s in listSanPham"*@>
        <div class='product1'>
            <h2>{{s.TenSP}}</h2>
            @*<a style='font-size:20px;'>
                Giá thị trường:
                <label style='color:#CCC'><s><u>đ</u>290.000</s></label><br />
            </a>*@
            <label style="color: red; font-size: 23px;">{{s.GiaBan}} đ</label>
            @*<label style="color: blue; font-size: 18px;">(Tiết kiệm 48%)</label>*@
            <hr>
            
            <label style="font-size: 20px;">MÔ TẢ : {{s.MoTa}}</label>
            <div style='line-height: 20px'>

                <i style='color:rgb(16, 151, 144)' class="fas fa-truck"></i>
                <label> Miễn phí vận chuyển</label><br />
                <label style='color:#BBB'>Miễn phí vận chuyển khi đơn đạt giá trị tối thiểu...</label>
            </div>
            <br />
            @*<div style='width: 100%; height: 100px;'>
                Chọn màu: <br /><br />
                <ul>
                    <li onclick="changeImage('one')" id="one">11</li>
                    <li onclick="changeImage('two')" id="two">12</li>
                    <li onclick="changeImage('three')" id="three">13</li>
                    <li onclick="changeImage('four')" id="four">14</li>
                    <li onclick="changeImage('five')" id="five">15</li>
                </ul>
            </div>*@
            <br />
            <br />
            <div style='width: 100%; height: 80px;'>
                Số lượng:
                <br /><br />
                <div class="order-amount">
                    <input onclick='subAmount("txt2")' class="btn-sub" type="button" value="-" />
                    <input id='txt2' class="txt-amount" type="text" value="1" />
                    <input onclick='plusAmount("txt2")' class="btn-plus" type="button" value="+" />
                </div>
            </div>
            <br />
            <br />
            <div style='width: 100%; height: 100px;'>
                <input type='button' class='btn-buy' value='Thêm vào giỏ'  ng-click="$root.AddCart(s)">
                <a href='beauty-dh.html' />

                <input type='button' class='btn-view' onclick="location='beauty-dh.html'" value='Mua hàng' />

            </div>
        </div>

    </div>
    <br />
    <br />
    <div>
        <label style="padding-left:20px;line-height: 40px;font-size: 25px;color: #6E573D"><b>MÔ TẢ</b></label>
        <div style="width:30%;height:2.5px; background-color: #6E573D; margin-left:20px;"></div>
        <br />
        <label style="color: black; font-size: 20px; margin-left: 20px">{{s.MoTa}} </label>
        
    </div>
</div>
<script src='~/js/images.js'></script>
<script src='~/js/beauty.js'></script>